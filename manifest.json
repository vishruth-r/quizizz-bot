{
  "manifest_version": 3,
  "name": "Quiz Answer Finder",
  "version": "1.0",
  "description": "Highlights the correct answer using OpenAI API",
  "permissions": ["scripting", "activeTab", "storage"],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Quiz Answer Finder"
  },
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
  {
    "matches": ["<all_urls>"],
    "js": ["content.js"],
    "css": ["styles.css"],
    "run_at": "document_end"
  }
]
}
